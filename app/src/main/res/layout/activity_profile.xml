<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="676dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/winky_icon"
                android:layout_width="95dp"
                android:layout_height="47dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_main_full" />

            <TextView
                android:id="@+id/profile_setting_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Profile Settings"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/winky_icon"
                app:layout_constraintTop_toBottomOf="@id/winky_icon" />

            <TextView
                android:id="@+id/profile_setting_description"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Manage your account settings and preferences"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/profile_setting_textView"
                app:layout_constraintEnd_toEndOf="@id/profile_setting_textView"
                app:layout_constraintTop_toBottomOf="@id/profile_setting_textView" />

            <TextView
                android:id="@+id/account_info_label"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Account Information"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/profile_setting_description"
                app:layout_constraintEnd_toEndOf="@id/profile_setting_description"
                app:layout_constraintTop_toBottomOf="@id/profile_setting_description" />

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dashboard_group_background"
                app:layout_constraintEnd_toEndOf="@id/account_info_label"
                app:layout_constraintStart_toStartOf="@id/account_info_label"
                app:layout_constraintTop_toBottomOf="@id/account_info_label" />


            <Button
                android:id="@+id/change_profile_pic_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Change Profile Picture"
                android:fontFamily="@font/poppins_regular"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@id/profile_pic"
                app:layout_constraintStart_toStartOf="@id/profile_pic"
                app:layout_constraintTop_toBottomOf="@id/profile_pic"
                />

            <TextView
                android:id="@+id/first_name_box"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="First Name:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/change_profile_pic_icon"
                app:layout_constraintHorizontal_bias="0.607"
                app:layout_constraintStart_toStartOf="@id/change_profile_pic_icon"
                app:layout_constraintTop_toBottomOf="@id/change_profile_pic_icon"
                />

            <TextView
                android:id="@+id/first_name_details"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="EMMA"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/first_name_box"
                app:layout_constraintBaseline_toBaselineOf="@id/first_name_box"
                />

            <TextView
                android:id="@+id/last_name_box"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Last Name:"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.607"
                app:layout_constraintStart_toStartOf="@id/first_name_box"
                app:layout_constraintTop_toBottomOf="@id/first_name_box"
                />

            <TextView
                android:id="@+id/last_name_details"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Watson"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/last_name_box"
                app:layout_constraintBaseline_toBaselineOf="@id/last_name_box"
                />

            <TextView
                android:id="@+id/email_box"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Email:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/last_name_box"
                app:layout_constraintTop_toBottomOf="@id/last_name_box"
                />

            <TextView
                android:id="@+id/email_details"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="emma.watson@gmail.com"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/email_box"
                app:layout_constraintBaseline_toBaselineOf="@id/email_box"
                />

            <TextView
                android:id="@+id/address_box"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Address:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/email_box"
                app:layout_constraintTop_toBottomOf="@id/email_box"
                />

            <TextView
                android:id="@+id/address_details"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="BML Munjal University"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/address_box"
                app:layout_constraintBaseline_toBaselineOf="@id/address_box"
                />

            <TextView
                android:id="@+id/phone_number_box"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Phone No.:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/address_box"
                app:layout_constraintTop_toBottomOf="@id/address_box"
                />

            <TextView
                android:id="@+id/phone_number_details"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="7024332274"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/phone_number_box"
                app:layout_constraintBaseline_toBaselineOf="@id/phone_number_box"
                />

            <Button
                android:id="@+id/save_changes_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Save Changes"
                android:fontFamily="@font/poppins_medium"
                app:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/phone_number_box"
                app:layout_constraintStart_toStartOf="@id/change_profile_pic_icon"
                app:layout_constraintEnd_toEndOf="@id/change_profile_pic_icon"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Blurry Line at the Top -->
        <View
            android:id="@+id/blurLine"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="@drawable/blur_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Home Item -->
        <!-- Home Item -->
        <LinearLayout
            android:id="@+id/home_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cart_item">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Cart Item -->
        <LinearLayout
            android:id="@+id/cart_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_item"
            app:layout_constraintEnd_toStartOf="@id/orders_item">

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart_icon"
                android:contentDescription="Cart Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Orders Item -->
        <LinearLayout
            android:id="@+id/orders_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cart_item"
            app:layout_constraintEnd_toStartOf="@id/profile_item">

            <ImageView
                android:id="@+id/orders_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/orders_icon"
                android:contentDescription="Orders Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Profile Item -->
        <LinearLayout
            android:id="@+id/profile_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/orders_item"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_icon"
                android:contentDescription="Profile Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>