<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="676dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dashboard_icon"
                android:layout_width="95dp"
                android:layout_height="47dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_main_full" />


            <ImageView
                android:id="@+id/wishlist_button"
                android:layout_width="31dp"
                android:layout_height="25dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/dashboard_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/wishlist_icon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="132dp"
                android:text="Special Offers"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_icon"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dashboard_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/dashboard_banner_1"
                android:layout_width="372dp"
                android:layout_height="214dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dashboard_banner_1"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:id="@+id/category_1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/dashboard_group_background"
                android:clickable="true"
                android:contentDescription="Groceries and Shopping"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_banner_1"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="@+id/dashboard_banner_1"
                app:layout_constraintTop_toBottomOf="@+id/dashboard_banner_1" />

            <ImageView
                android:id="@+id/category_1_icon"
                android:layout_width="92dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:contentDescription="Grocery icon"
                android:src="@drawable/grocery_category"
                app:layout_constraintBottom_toBottomOf="@+id/category_1"
                app:layout_constraintEnd_toEndOf="@+id/category_1" />

            <TextView
                android:id="@+id/category_1_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Groceries and Staples"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@+id/category_1"
                app:layout_constraintTop_toBottomOf="@+id/category_1" />

            <ImageView
                android:id="@+id/category_2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/dashboard_group_background"
                android:clickable="true"
                android:contentDescription="Personal Care"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_banner_1"
                app:layout_constraintStart_toStartOf="@+id/dashboard_banner_1"
                app:layout_constraintTop_toBottomOf="@+id/dashboard_banner_1" />

            <ImageView
                android:id="@+id/category_2_icon"
                android:layout_width="92dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:contentDescription="Personal Care icon"
                android:src="@drawable/personal_care_icon"
                app:layout_constraintBottom_toBottomOf="@+id/category_2"
                app:layout_constraintEnd_toEndOf="@+id/category_2" />

            <TextView
                android:id="@+id/category_2_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Personal Care"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@+id/category_2"
                app:layout_constraintTop_toBottomOf="@+id/category_2" />

            <ImageView
                android:id="@+id/category_3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/dashboard_group_background"
                android:clickable="true"
                android:contentDescription="Dairy"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_banner_1"
                app:layout_constraintHorizontal_bias="0.925"
                app:layout_constraintStart_toStartOf="@+id/dashboard_banner_1"
                app:layout_constraintTop_toBottomOf="@+id/dashboard_banner_1" />

            <ImageView
                android:id="@+id/category_3_icon"
                android:layout_width="88dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:contentDescription="Dairy icon"
                android:src="@drawable/dairy_icon"
                app:layout_constraintBottom_toBottomOf="@+id/category_3"
                app:layout_constraintEnd_toEndOf="@+id/category_3" />

            <TextView
                android:id="@+id/category_3_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dairy and Bakery"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@+id/category_3"
                app:layout_constraintTop_toBottomOf="@+id/category_3" />

            <ImageView
                android:id="@+id/category_4"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="164dp"
                android:background="@drawable/dashboard_group_background"
                android:clickable="true"
                android:contentDescription="Beverages"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_banner_1"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="@+id/dashboard_banner_1"
                app:layout_constraintTop_toBottomOf="@+id/dashboard_banner_1" />

            <ImageView
                android:id="@+id/category_4_icon"
                android:layout_width="101dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:contentDescription="Baverages icon"
                android:src="@drawable/beverages_icon"
                app:layout_constraintBottom_toBottomOf="@+id/category_4"
                app:layout_constraintEnd_toEndOf="@+id/category_4" />

            <TextView
                android:id="@+id/category_4_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Beverages"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@+id/category_4"
                app:layout_constraintTop_toBottomOf="@+id/category_4" />

            <ImageView
                android:id="@+id/category_5"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="164dp"
                android:background="@drawable/dashboard_group_background"
                android:clickable="true"
                android:contentDescription="Baby Care"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_banner_1"
                app:layout_constraintStart_toStartOf="@+id/dashboard_banner_1"
                app:layout_constraintTop_toBottomOf="@+id/dashboard_banner_1" />

            <ImageView
                android:id="@+id/category_5_icon"
                android:layout_width="96dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:contentDescription="Baby Care icon"
                android:src="@drawable/baby_care_icon"
                app:layout_constraintBottom_toBottomOf="@+id/category_5"
                app:layout_constraintEnd_toEndOf="@+id/category_5" />

            <TextView
                android:id="@+id/category_5_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Baby Care Products"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@+id/category_5"
                app:layout_constraintTop_toBottomOf="@+id/category_5" />

            <ImageView
                android:id="@+id/category_6"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="164dp"
                android:background="@drawable/dashboard_group_background"
                android:clickable="true"
                android:contentDescription="Household essentials"
                app:backgroundTint="@color/theme"
                app:layout_constraintEnd_toEndOf="@+id/dashboard_banner_1"
                app:layout_constraintHorizontal_bias="0.925"
                app:layout_constraintStart_toStartOf="@+id/dashboard_banner_1"
                app:layout_constraintTop_toBottomOf="@+id/dashboard_banner_1" />

            <ImageView
                android:id="@+id/category_6_icon"
                android:layout_width="92dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:contentDescription="Household essentials icon"
                android:src="@drawable/household_essentials_icon"
                app:layout_constraintBottom_toBottomOf="@+id/category_6"
                app:layout_constraintEnd_toEndOf="@+id/category_6" />

            <TextView
                android:id="@+id/category_6_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Household essentials"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@+id/category_6"
                app:layout_constraintTop_toBottomOf="@+id/category_6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Blurry Line at the Top -->
        <View
            android:id="@+id/blurLine"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="@drawable/blur_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Home Item -->
        <!-- Home Item -->
        <LinearLayout
            android:id="@+id/home_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cart_item">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Cart Item -->
        <LinearLayout
            android:id="@+id/cart_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_item"
            app:layout_constraintEnd_toStartOf="@id/orders_item">

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart_icon"
                android:contentDescription="Cart Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Orders Item -->
        <LinearLayout
            android:id="@+id/orders_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cart_item"
            app:layout_constraintEnd_toStartOf="@id/profile_item">

            <ImageView
                android:id="@+id/orders_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/orders_icon"
                android:contentDescription="Orders Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Profile Item -->
        <LinearLayout
            android:id="@+id/profile_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/blurLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/orders_item"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_icon"
                android:contentDescription="Profile Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>